<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyBackgroundLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/historyRowTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/temprature"
            android:drawablePadding="@dimen/image_text_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/rows_bottom_padding"
            android:text="@string/ambient_temp_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/historyRowRelativeHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/relative_humidity"
            android:drawablePadding="@dimen/image_text_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/rows_bottom_padding"
            android:text="@string/relative_humidity_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/historyRowAbsoluteHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/absolute_humidity"
            android:drawablePadding="@dimen/image_text_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/rows_bottom_padding"
            android:text="@string/absolute_humidity_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/historyRowPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pressure"
            android:drawablePadding="@dimen/image_text_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/rows_bottom_padding"
            android:text="@string/pressure_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/historyRowDewPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dew_point"
            android:drawablePadding="@dimen/image_text_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/rows_bottom_padding"
            android:text="@string/dew_point_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/historyRowLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/light"
            android:drawablePadding="@dimen/image_text_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/rows_bottom_padding"
            android:text="@string/light_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/historyRowMagneticField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/magnetic_field"
            android:drawablePadding="@dimen/image_text_padding"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/rows_bottom_padding"
            android:text="@string/magnetic_field_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</ScrollView>